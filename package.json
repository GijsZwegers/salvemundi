{
  "name": "samu-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "GPL-2.0",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage",
    "erd": "./node_modules/.bin/tsuml --glob ./src/entities/*.ts"
  },
  "dependencies": {
    "@nestjs/common": "^6.4.0",
    "@nestjs/core": "^6.4.0",
    "@nestjs/platform-express": "^6.4.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "mysql": "^2.17.1",
    "nestjs-config": "^1.4.2",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.6",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.4.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.14.10",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.1",
    "jest": "^24.5.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "^5.18.0",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [ "ts", "js" ],
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": ".spec.ts$",
    "coverageDirectory": "../coverage",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
