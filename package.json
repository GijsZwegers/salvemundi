{
  "name": "samu-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "GPL-2.0",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "testLocal": "jest --coverage",
    "erd": "./node_modules/.bin/tsuml --glob ./src/entities/*.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/typeormConfig.ts",
    "deploy": "npm run build && ./node_modules/.bin/now --token=$NOW_TOKEN"
  },
  "dependencies": {
    "@nestjs/common": "^6.6.7",
    "@nestjs/core": "^6.6.7",
    "@nestjs/platform-express": "^6.6.7",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/typeorm": "^6.1.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.1.0",
    "mysql": "^2.17.1",
    "nestjs-config": "^1.4.4",
    "nodemailer": "^6.3.1",
    "nodemailer-express-handlebars": "^3.1.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "now": "^16.2.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.7.1",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.0",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.6.7",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.14.18",
    "@types/supertest": "^2.0.8",
    "concurrently": "^4.1.2",
    "coveralls": "^3.0.6",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "^5.20.0",
    "typescript": "3.4.3",
    "wait-on": "^3.3.0"
  }
}
